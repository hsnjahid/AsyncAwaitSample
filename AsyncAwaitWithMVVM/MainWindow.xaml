<Window x:Class="AsyncAwaitWithMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncAwaitWithMVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
      <Button Margin="5" Height="40" Content="Generate Number" 
              Command="{Binding GetNumberCommand}"/>
      <TextBlock Margin="5" Height="40" 
                 Text="{Binding Number}"/>

    </StackPanel>
    <local:CircularBusyIndicator IsBusy="{Binding IsBusy}"/>


  </Grid>
</Window>
