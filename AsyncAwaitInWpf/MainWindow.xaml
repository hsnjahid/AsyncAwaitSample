<Window x:Class="AsyncAwaitInWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncAwaitInWpf"
        mc:Ignorable="d"
        Title="Async and await"
        Height="300" Width="400"
        ResizeMode="NoResize">
  
  <Window.Resources>
    <Style TargetType="{x:Type Button}">
      <Setter Property="Width" Value="150"/>
      <Setter Property="Height" Value="50"/>
      <Setter Property="Margin" Value="0,5"/>
    </Style>
  </Window.Resources>
  
  <StackPanel>
    <Button Content="Normal Handler Button !!!" 
            Click="OnButtonClickChangeTextNormally"/>
    <Button Content="Threaded Handler Button !!!" 
            Click="OnButtonClickChangeTextThreaded"/>
    <Button Content="Awaited Handler Button !!!" 
            Click="OnButtonClickChangeTextAwaited"/>
    <TextBlock x:Name="DisplayTextBlock" 
               Height="50" 
               Margin="5,20,5,5" 
               TextAlignment="Center"
               TextBlock.FontSize="20"
               Foreground="Blue"/>
  </StackPanel>
</Window>
